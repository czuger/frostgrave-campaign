#wizard-choose-spells

  .h2
    Choisissez un sort par école alignée du mage

  <spell-button v-for="spell in aligned_spells_1" :key="spell['title']" v-bind:spell_name="spell['title']"
  v-bind:spell_content="'('+spell['difficulty']+') - '+spell['target']+' : '+spell['description']"
  aligned-spells-code="school1" :spell_level="spell['difficulty']">
  </spell-button>

  %hr

  <spell-button v-for="spell in aligned_spells_2" :key="spell['title']" v-bind:spell_name="spell['title']"
  v-bind:spell_content="'('+spell['difficulty']+') - '+spell['target']+' : '+spell['description']"
  aligned-spells-code="school2" :spell_level="spell['difficulty']">
  </spell-button>

  %hr

  <spell-button v-for="spell in aligned_spells_3" :key="spell['title']" v-bind:spell_name="spell['title']"
  v-bind:spell_content="'('+spell['difficulty']+') - '+spell['target']+' : '+spell['description']"
  aligned-spells-code="school3" :spell_level="spell['difficulty']">
  </spell-button>


  <div class="row mt-2">
  <div class="col-9">
  <button type="button" class="btn btn-primary btn-block" :disabled="!can_validate" v-on:click="validate">Valider</button>
  </div>
  </div>

  %input{ type: :hidden, id: :mage_name, value: mage_name}
  %input{ type: :hidden, id: :mage_type, value: mage_type}
  %input{ type: :hidden, id: :mage_id, value: @wizard.id}


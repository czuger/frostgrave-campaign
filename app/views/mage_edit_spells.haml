#wizard-choose-spells

  .h2
    Liste des sorts du mage

  <spell-button v-for="spell in spells" :key="spell['title']" v-bind:spell_name="spell['title']"
  v-bind:spell_content="'('+spell['difficulty']+') - '+spell['target']+' : '+spell['description']"
  v-bind:spell_level=spell['difficulty'] v-bind:selected_saved_state=spell['selected_saved_state']></spell-button>

  <div class="row mt-2">
  <div class="col-9">
  <button type="button" class="btn btn-primary btn-block" v-on:click="validate">Valider</button>
  </div>
  </div>

%input{ type: :hidden, id: :wizard, value: @wizard_export.to_json}
%input{ type: :hidden, id: :flatten_spells, value: @flatten_spells.to_json}
%input{ type: :hidden, id: :sorted_spells_keys, value: @sorted_spells_keys}

= haml :common_js

%script{type: 'application/javascript', src: '/js/mage_edit_spells.js'}